div.col-sm-12.col-lg-12.col-xs-12.main
	.col-sm-12.col-lg-12.col-xs-12.tab
		ul.nav.nav-pills.ivsetpills
			li.active
				a.list(data-toggle='pill', data-url='/listbed') View
			li
				a.add(data-toggle='pill', data-url='/addbed') Add   
	.col-sm-12.cnt
			each bed in beds                                          
				div.col-sm-12.col-xs-12.list-bed
					.col-sm-10.col-xs-8.b1
						h4 #{bed.bname}
					.col-sm-1.col-xs-2.i1.btn-default.glyphicon.glyphicon-pencil.editbed(data-url='/editbed?bed=#{bed._id}')(id='#{bed._id}'+'edit')  
					.col-sm-1.col-xs-2.i2.btn-default.glyphicon.glyphicon-remove(class='#{bed.bedstatus}')
						
