.col-sm-12.main
  .col-sm-12.tab
    ul.nav.nav-pills.ivsetpills
      li
        a.list(data-toggle='pill', data-url='/listivset') View
      li.active
        a.add(data-toggle='pill', data-url='/addivset') Add 
  .col-sm-12.cnt
    each ivset in ivsets
      form(role='form',action="/editivset",method="post")
        h4 Edit IV set
        h5  IV set Name
        .form-group
        input.form-control(type='text', name="ivname", placeholder='IV set' value='#{ivset.ivname}' required)
        br
        h5  IV set Dropfactor
        .form-group
        input.form-control(type='number', name="ivdpf", placeholder='IV Drop Factor' value='#{ivset.ivdpf}'  data-validation='number'   required )
        .form-group
        input.form-control(type='hidden', name="ivid", value='#{ivset._id}' required)
        br
        button.btn.btn-info(type='submit') Edit IV-Set

      
